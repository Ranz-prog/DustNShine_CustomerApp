<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/topSide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/clientImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/clientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/clientImage"
                android:fontFamily="@font/quicksand_semibold"
                android:text="@string/ClientName"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/manageAccButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@id/clientName"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/clientImage"
                android:background="@drawable/manage_button"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/Manage"
                android:textSize="11sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/notificationBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/bell_ring" />

            <TextView
                android:id="@+id/cleaningTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/manageAccButton"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/quicksand_light"
                android:text="@string/CleaningCompanies"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/locationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cleaningTV"
                android:fontFamily="@font/calibribold"
                android:text="@string/Location"
                android:textColor="@color/app_theme_gold"
                android:textSize="35sp"
                android:textStyle="bold" />

            <SearchView
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/locationTv"
                android:layout_marginTop="30dp"
                android:background="@drawable/container1"
                android:gravity="center"
                android:orientation="horizontal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/middleSide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topSide"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recommendationTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_font"
                android:text="@string/Recommendation"
                android:textColor="@color/app_theme_gold"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:fontFamily="@font/quicksand_font"
                android:text="view all"
                android:textColor="@color/line_divider_color"
                android:textSize="15sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/companiesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recommendationTV"
                android:layout_marginTop="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/botSide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/middleSide"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/featuredTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_font"
                android:text="@string/FeaturedServices"
                android:textColor="@color/app_theme_gold"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/firstrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/botSide"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/gencon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/container_border_2"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/home_cleaning" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/garcon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/gencon"
                android:background="@drawable/container_border_2"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/garage_cleaning" />
            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/secondrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/firstrow"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:id="@+id/dencon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/container_border_2"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/garden_cleaning" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/repcon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/dencon"
                android:background="@drawable/container_border_2"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/repair" />
            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>
</ScrollView>