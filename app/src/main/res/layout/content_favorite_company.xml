<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:padding="5dp"
    android:background="@drawable/recommendation_border_2"
    android:layout_marginTop="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/compic"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="5dp">


        <ImageView
            android:id="@+id/companyImgFav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/company1" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/heart_red"
            android:layout_gravity="right"/>


    </androidx.cardview.widget.CardView>



    <RelativeLayout
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/compic">

        <TextView
            android:id="@+id/companyNameTVFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Clean Solutions"
            android:textColor="@color/app_theme_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAdrress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companyNameTVFav"
            android:layout_marginStart="10dp"
            android:text="location"
            android:textColor="@color/app_theme_black"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/compic"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/company"
        android:background="@drawable/rating_border_2"
        android:padding="4dp">

        <ImageView
            android:id="@+id/star"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:padding="2dp"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/ratingFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/star"
            android:text="rating"
            android:textColor="@color/app_theme_gold"
            android:textSize="15sp" />

    </RelativeLayout>

    

</RelativeLayout>