<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@color/background"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/container_border"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/clientImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/detailsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"

            android:layout_toRightOf="@+id/clientImage"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/customerdetails"
            android:textColor="@color/app_theme_blue"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailsTv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/clientImage"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/txtcustomername"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerNameBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailsTv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/nameTv"
            android:fontFamily="@font/quicksand_regular"
            android:text="@string/customername"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/locTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/clientImage"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/txtlocationdetails"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerLocationBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTv"
            android:layout_marginLeft="10dp"

            android:layout_toRightOf="@+id/locTv"
            android:fontFamily="@font/quicksand_regular"
            android:text="@string/Address"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/conTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locTv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/clientImage"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/txtcontactnumber"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contactNumberBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locTv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/conTv"
            android:fontFamily="@font/quicksand_regular"
            android:text="@string/contactnumber"
            android:textSize="14sp" />
    </RelativeLayout>

    //Sample comment comment








    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/cardView">



    </RelativeLayout>

</androidx.cardview.widget.CardView>





