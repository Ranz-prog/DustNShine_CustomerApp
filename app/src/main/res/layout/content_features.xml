<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/container_border_2"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/serviceImg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="23dp"
            app:srcCompat="@drawable/repair" />

        <TextView
            android:id="@+id/serviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/serviceImg"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="House Cleaning"
            android:textColor="@color/app_theme_blue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/serviceDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/serviceName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/quicksand_font"
            android:text="dawdsawdsfw"
            android:textColor="@color/line_divider_color"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>