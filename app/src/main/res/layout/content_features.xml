<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_border_2"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgService"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="23dp" />

        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgService"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/app_theme_blue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvServiceDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvServiceName"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/quicksand_font"
            android:textColor="@color/line_divider_color"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>