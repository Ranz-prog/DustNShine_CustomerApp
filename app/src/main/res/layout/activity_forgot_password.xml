<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ReturnButton"
        android:layout_width="44dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/ic_angle_small_left"
        android:backgroundTint="@color/app_blue" />

    <TextView
        android:id="@+id/ForgetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="39dp"
        android:layout_toEndOf="@+id/ReturnButton"
        android:text="Forget Password"
        android:textColor="@color/app_yellow"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ResetText"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReturnButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="12dp"
        android:text="Reset Your Password" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ResetText"
        android:layout_marginHorizontal="20sp"
        android:layout_marginVertical="20sp">

        <TextView
            android:id="@+id/NewPasswordTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="10sp"
            android:text="New Password" />

        <EditText
            android:id="@+id/EditPassword"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NewPasswordTxt"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="30sp"

            android:inputType="textPassword" />

        <TextView
            android:id="@+id/ReTypeNewPasswordTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EditPassword"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="80sp"
            android:text="Re type New Password" />

        <EditText
            android:id="@+id/RetypeNewPasswordInput"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ReTypeNewPasswordTxt"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="110sp"

            android:inputType="textPassword" />

        <TextView
            android:id="@+id/ResetCodeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RetypeNewPasswordInput"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="160sp"
            android:text="Reset Code" />

        <EditText
            android:id="@+id/ResetCodeInput"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ResetCodeTxt"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="190sp"

            android:inputType="textPassword" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Cancel"
            android:layout_width="96dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="150sp"
            android:layout_marginVertical="250sp"
            android:text="Cancel" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Search"
            android:layout_width="96dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="250sp"
            android:layout_marginVertical="250sp"
            android:text="Search" />


    </androidx.cardview.widget.CardView>
</RelativeLayout>