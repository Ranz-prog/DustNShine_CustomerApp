<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundbutton2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtBookingHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/quicksand_medium"
            android:text="Date &amp; Time"
            android:textColor="@color/app_theme_gold"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtBookingHistory"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendar"
            android:padding="10dp">

            <TextView
                android:id="@+id/pickTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/quicksand_medium"
                android:text="Pick Time"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEightAM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pickTimeTv"
                android:layout_marginTop="10dp"
                android:background="@drawable/datetime_unselected_round_button"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/eightam"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNineAM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pickTimeTv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/datetime_unselected_round_button"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/nineam"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTenAM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pickTimeTv"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/datetime_unselected_round_button"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/tenam"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnElevenAM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnEightAM"
                android:layout_marginTop="10dp"
                android:background="@drawable/datetime_unselected_round_button"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/elevenam"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTwelvePM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnNineAM"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/datetime_unselected_round_button"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/twelvepm"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnOnePM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnTenAM"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/datetime_unselected_round_button"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/onepm"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTwoPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnElevenAM"
                android:layout_marginTop="10dp"
                android:background="@drawable/datetime_unselected_round_button"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/twopm"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnThreePM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnTwelvePM"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/datetime_unselected_round_button"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/threepm"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFourPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnOnePM"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/datetime_unselected_round_button"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/fourpm"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFivePM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnThreePM"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/datetime_unselected_round_button"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/fivepm"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/app_theme_gold"
            android:text="@string/next"
            android:textColor="@color/white" />

    </RelativeLayout>

</layout>