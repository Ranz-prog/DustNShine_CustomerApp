<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="300dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/recommendation_border_2"
    android:orientation="horizontal"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/compimg"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="5dp">

        <ImageView
            app:srcCompat="@drawable/company1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/compimg">

        <TextView
            android:id="@+id/companyNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Clean Solutions"
            android:textColor="@color/app_theme_blue"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/companyLocationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companyNameTV"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto_regular"
            android:text="location"
            android:textColor="@color/app_theme_black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/compimg"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/company"
        android:background="@drawable/rating_border_2"
        android:padding="4dp">

        <ImageView
            android:id="@+id/star"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:padding="2dp"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/companyRatingTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/star"
            android:fontFamily="@font/montserrat_medium"
            android:text="rating"
            android:textColor="@color/app_theme_gold"
            android:textSize="15sp" />

    </RelativeLayout>


</RelativeLayout>