<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="226dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp">

    <ImageView
        android:id="@+id/companyImg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/company1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
            android:id="@+id/companyNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="120dp"
            android:text="Clean Solutions"
            android:textColor="@color/app_theme_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/companyLocationTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/companyNameTV"

                android:layout_marginStart="10dp"
                android:text="location"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/companyRatingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/companyLocationTV"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:text="rating"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/star"
                android:layout_below="@+id/companyLocationTV"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_toLeftOf="@+id/companyRatingTV"

                app:srcCompat="@drawable/star" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>